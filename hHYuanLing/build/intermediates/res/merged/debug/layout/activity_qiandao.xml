<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_time_qiandao" />

        <TextView
            android:id="@+id/tv_time_qiandao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="2016年11月29日"
            android:textColor="#a9b7b7"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_company_qiandao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="当前企业："
            android:textColor="#a9b7b7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_company_qiandao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="贵州恒昊软件科技有限公司"
            android:textColor="#a9b7b7"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a9b7b7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_place_qiandao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有定位信息！"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:id="@+id/img_qiandao"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/icon_orangecircle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_qiandao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签到"
                    android:textColor="#EAEAEA"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_hourminute_qiandao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="13:30"
                    android:textColor="#ffffff"
                    android:textSize="25sp" />
            </LinearLayout>
            <!-- 签到状态 -->

            <ImageView
                android:id="@+id/img_confirm_qiandao"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignTop="@+id/tv_state_qiandao"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/tv_state_qiandao"
                android:src="@drawable/icon_confirm_qiandao"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_state_qiandao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_qiandao"
                android:layout_centerHorizontal="true"
                android:text="今日你还未签到"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a9b7b7" />

</LinearLayout>